<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :body %>
    <%= f.input :ingredients %>
    <%= f.input :meta %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
